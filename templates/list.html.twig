{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>
            <p class="text-center">
                Users
            </p>
        </h1>
        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
    </div>

    <div class="container main-container">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Username</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{% if  user.active  %}
                            <a href="{{ path("action_disabled_user", {"id": user.id}) }}">Deactive</a>
                        {% else %}
                            <a href="{{ path("action_active_user", {"id": user.id}) }}">Active</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="navigation">
        {{ knp_pagination_render(users) }}
    </div>
{% endblock %}

